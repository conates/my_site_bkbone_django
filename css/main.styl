@import 'lib/normalize'

color_bk_head = #1C1E20
color_bk_que_hago = rgba(255,255,255,1)
color_bk_que_he_hecho= rgba(255, 255, 255,1)
color_bk_como_lo_hago = rgba(245, 171, 53,1)
color_white =rgba(255,255,255,1)
color_bk_contact =#1C1E20

.window
	width:100%
	height 100%
	position:absolute


.decor-top
	height:60px
	left:0
	top: -1px
	position:absolute
	width:100%

.decor-bottom
	height:60px
	left:0
	bottom: 0
	position:absolute
	width:100%

section .container
	display: block;
	position: absolute;
	text-align: center;
	width: 100%;
	z-index: 2;

section#head
	background:none repeat scroll 0 0 color_bk_head
	top:0%
	height:70% !important
	z-index 6

	.background-media
		background-image:url('../img/sw_code_php_2_csunk.jpg');
		background-repeat:no-repeat;
		background-size:cover;
		background-attachment:fixed;
		background-position: 0 0;
		background-repeat: no-repeat;
		overflow: hidden;
		z-index: 1;

	.background-overlay
		background-color:rgba(0,0,0,0.8)
		z-index: 2;
	
	.background-media, .background-overlay
		bottom: 0;
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;
	

	.container
		height 100%

		header
			font-family: 'Cutive Mono';
			padding: 10% 0;
			h1
				font-family: 'Cutive Mono'
				font-size: 4em
				color #EFEFEF
				margin 0 auto
				text-align center
			p
				color: #EFEFEF;
				line-height: 40px;
				margin: 50px auto;
				text-align: center;

	.decor-bottom
		z-index 3
		background transparent
		svg
			fill: color_white
			height 101%


section#que_hago
	background:none repeat scroll 0 0 color_bk_que_hago
	top:70%
	height:80%

	
	.container
		font-family: 'Cutive Mono';
		padding: 1% 0;

		h2
			font-family: 'Cutive Mono'
			font-size: 2.5em
			color rgba(0, 0, 0, 0.8)
			margin 0 auto
			text-align center

	.decor-bottom
		svg
			fill: color_bk_que_hago
			height 101%


section#como
	background:none repeat scroll 0 0 color_bk_como_lo_hago
	top:190%
	height:80%

	.container
		
		header
			font-family: 'Cutive Mono';
			padding: 1% 0;
			h2
				font-family: 'Cutive Mono'
				font-size: 2.5em
				color rgba(0, 0, 0, 0.8)
				margin 0 auto
				text-align center
			


section#que_he_hecho
	background:none repeat scroll 0 0 color_bk_que_he_hecho
	top:270%
	height:80%

	.container
		
		header
			font-family: 'Cutive Mono';
			padding: 6% 0 1% 0;
			h2
				font-family: 'Cutive Mono'
				font-size: 2.5em
				color rgba(0, 0, 0, 0.8)
				margin 0 auto

				text-align center
	.decor-top
		svg
			fill: color_bk_como_lo_hago
			height 101%

	.decor-bottom
		svg
			fill: color_bk_contact
			height 101%



section#contact
	height:70%
	top 350%
	background:none repeat scroll 0 0 color_bk_contact
	z-index 5
	transition all ease-in 2s !important

	.background-media
		overflow: hidden;
		z-index: 1;

	.background-overlay
		background-color:rgba(0,0,0,0.8)
		z-index: 2;
	
	.background-media, .background-overlay
		bottom: 0;
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;

	.container
		height 100%
		display block !important
		
		#map_canvas
			height: 100%;
			width: 100%;


	.decor-top
		display block  !important
		z-index 5

		svg
			fill: color_bk_que_he_hecho
			height 101%


section.back
	height: 40% !important;
	z-index: 6;

	.background-media
		background-image:url('../img/back1.jpg');
		background-repeat:no-repeat;
		background-size:cover;
		background-attachment:fixed;
		background-position: 0 0;
		background-repeat: no-repeat;
		overflow: hidden;
		z-index: 1;

	.background-overlay
		background-color:rgba(0,0,0,0.8)
		z-index: 2;
	
	.background-media, .background-overlay
		bottom: 0;
		left: 0;
		position: absolute;
		top: 0;
		width: 100%;

	.decor-top
		z-index: 5;
			
	.decor-bottom
		z-index 5
		bottom: -1px


section#back2
	top: 150%;

	.decor-top
		svg
			fill: color_bk_que_hago

	.decor-bottom
		svg
			fill color_bk_como_lo_hago

section#back3
	top: 350%;

	.decor-top
		svg
			fill: color_bk_que_hago

	.decor-bottom
		svg
			fill color_bk_contact



